<%= form_with(model: @booking, url: client_field_bookings_path(@field), local: true) do |form| %>
  <% if @booking.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(@booking.errors.count, "error") %> prohibited this booking from being saved:</h2>
      <ul>
        <% @booking.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex justify-center items-center min-h-screen bg-gray-100 pt-26">
    <div class="bg-white p-8 rounded-lg shadow-lg max-w-5xl w-full flex flex-col lg:flex-row">
      <!-- Form Input -->
      <div class="flex-1 mb-8 lg:mb-0 pt-26">
        <h2 class="text-2xl font-semibold mb-6">Masukkan data anda</h2>
        
        <!-- Check-In Date -->
        <div class="mb-4">
        <%= form.label :check_in_date, "Tanggal Check-In", class: "block text-gray-700 font-semibold mb-2" %>
        <%= form.date_field :check_in_date, class: "w-full px-4 py-2 border rounded-md bg-gray-100" %>
        </div>

        <!-- Check-Out Date -->
        <div class="mb-4">
        <%= form.label :check_out_date, "Tanggal Check-Out", class: "block text-gray-700 font-semibold mb-2" %>
        <%= form.date_field :check_out_date, class: "w-full px-4 py-2 border rounded-md bg-gray-100" %>
        </div>
        <div class="mb-4">
          <label class="block text-gray-700">Nama</label>
          <input type="text" value="Mawar" class="w-full px-4 py-2 border rounded-md bg-gray-100" disabled>
        </div>
        <div class="mb-4">
          <label class="block text-gray-700">Email</label>
          <input type="text" value="mawar@gmail.com" class="w-full px-4 py-2 border rounded-md bg-gray-100" disabled>
        </div>
        <div class="mb-6">
          <label class="block text-gray-700">No Handphone</label>
          <input type="text" value="0896000000" class="w-full px-4 py-2 border rounded-md bg-gray-100" disabled>
        </div>
        <button type="submit" class="w-full bg-blue-900 text-white py-2 rounded-md">Pilih Metode Pembayaran</button>
      </div>

      <!-- Detail Lapangan -->
      <div class="flex-1 lg:ml-8">
        <h3 class="text-xl font-semibold mb-4"><%= @field.name %></h3>
        <div class="flex justify-center mb-4">
          <% if @field.image && @field.image.attached? %>
            <%= image_tag url_for(@field.image), class: "w-full h-[400px] object-cover rounded-lg" %>
          <% else %>
            <p class="text-center text-gray-700">No file attached</p>
          <% end %>
        </div>
        <p class="text-gray-700 mb-2"><%= @field.address %></p>
        <p class="text-gray-700 mb-4">08.00 WIB - 11.06 WIB</p>
        <div class="flex justify-between items-center mb-4">
          <span class="text-gray-700">Rp. <%= @field.price %></span>
        </div>
        <div class="flex justify-between items-center font-semibold">
          <span class="text-lg">TOTAL</span>
          <span class="text-2xl text-blue-900">Rp. <%= @field.price %></span>
        </div>
      </div>
    </div>
  </div>

  <div class="form-actions mt-4">
    <%= form.submit 'Save', class: 'bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700' %>
  </div>
<% end %>
