<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice">
        <%= notice %>
      </p>
    <% end %>
    
    <div class="container mx-auto p-6 pt-24">
      <!-- Field Header -->
      <div class="object-cover rounded-lg gap-6 mb-6">
        <div class="col-span-2">
        <% if @field.image && @field.image.attached? %>
          <%= image_tag url_for(@field.image), class: "flex w-11/12 h-[400px] object-cover rounded-lg item-center" %>
        <% else %>
          <p class="text-center text-gray-700">No file attached</p>
        <% end %>
       </div>
       </div>

       <div class="mb-6">
         <h1 class="text-3xl font-bold mb-4"><%= @field.name %></h1>
         <p class="text-lg text-gray-700 mb-4"><%= @field.address %></p>
         <p class="text-lg text-gray-700 mb-4"><%= @field.city %></p>
         <div class="text-xl text-gray-900 font-semibold">
           Rp. <%= (@field.price) %>
         </div>
         <%= link_to 'Booking', new_client_field_booking_path(@field), class: "mt-4 inline-block bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700" %>
       </div>

      <!-- Facilities Section -->
      <div class="mb-6">
        <h2 class="text-2xl font-semibold mb-2">Fasilitas</h2>
        <ul class="list-disc list-inside">
          <li>Masjid</li>
          <li>Parkir Luas</li>
          <li>Tiket</li>
          <li>Wastafel</li>
        </ul>
      </div>

      <!-- Schedule Section -->
      <div class="mb-6">
        <h2 class="text-2xl font-semibold mb-2">Pilih Lapangan & Waktu</h2>
        <div class="p-4 border rounded-lg">
          <h3 class="text-lg font-semibold">Lapangan Utama</h3>
          <p>Ketersediaan: 10 slot</p>
          <%= link_to 'Jadwal Tersedia', field_path(@field), class: "mt-2 inline-block bg-gray-200 text-blue-600 px-4 py-2 rounded-lg hover:bg-gray-300" %>
        </div>
      </div>

      <!-- Reschedule & Cancellation Section -->
      <div class="mb-6">
        <h2 class="text-2xl font-semibold mb-2">Reschedule & Pembatalan</h2>
        <p class="text-gray-700">Reservasi tidak dapat dibatalkan dan tidak ada refund.</p>
      </div>

      <!-- Reviews Section -->
      <div>
        <h2 class="text-2xl font-semibold mb-4">Ulasan</h2>
        <div class="space-y-4">
          <!-- Example Review 1 -->
          <div class="p-4 bg-gray-100 rounded-lg">
            <h4 class="font-semibold">Yuza Nugraha</h4>
            <p class="text-gray-600">Kebersihan: ⭐⭐⭐⭐⭐</p>
            <p class="text-gray-600">Kondisi Lapangan: ⭐⭐⭐⭐⭐</p>
            <p class="text-gray-600">Koneksi: ⭐⭐⭐⭐</p>
          </div>
          <!-- Example Review 2 -->
          <div class="p-4 bg-gray-100 rounded-lg">
            <h4 class="font-semibold">Akmal Fikron</h4>
            <p class="text-gray-600">Kebersihan: ⭐⭐⭐⭐</p>
            <p class="text-gray-600">Kondisi Lapangan: ⭐⭐⭐⭐</p>
            <p class="text-gray-600">Koneksi: ⭐⭐⭐⭐</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
