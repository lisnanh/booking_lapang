<%= form_with(model: payment, class: "contents") do |form| %>
  <% if payment.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(payment.errors.count, "error") %> prohibited this payment from being saved:</h2>

      <ul>
        <% payment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Metode Pembayaran</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 p-6">

    <div class="max-w-4xl mx-auto bg-white p-6 rounded-lg shadow-lg">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            <!-- Metode Pembayaran -->
            <div>
                <h2 class="text-lg font-semibold mb-4">Metode Pembayaran</h2>
                <div class="space-y-4">
                    <!-- Transfer Virtual Account -->
                    <div class="p-4 bg-gray-100 rounded-lg flex items-center justify-between">
                        <div class="flex items-center">
                            <img src="https://via.placeholder.com/100x50" alt="Virtual Account" class="w-16 h-8">
                            <span class="ml-4 text-gray-700 font-medium">Transfer Virtual Account</span>
                        </div>
                        <span class="text-sm text-gray-500">BCA, BNI, Mandiri</span>
                        <input type="radio" name="payment_method" class="ml-4">
                    </div>

                    <!-- Alfamart -->
                    <div class="p-4 bg-gray-100 rounded-lg flex items-center justify-between">
                        <div class="flex items-center">
                        <%= image_tag 'alfamart.jpeg', alt: 'Alfamart', class: 'w-16 h-8' %>
                            <span class="ml-4 text-gray-700 font-medium">Alfamart</span>
                        </div>
                        <span class="text-sm text-gray-500">Rp5.000</span>
                        <input type="radio" name="payment_method" class="ml-4">
                    </div>

                    <!-- Dana -->
                    <div class="p-4 bg-gray-100 rounded-lg flex items-center justify-between">
                        <div class="flex items-center">
                            <%= image_tag 'dana.jpeg', alt: 'Dana', class: 'w-16 h-8' %>
                            <span class="ml-4 text-gray-700 font-medium">Dana</span>
                        </div>
                        <span class="text-sm text-gray-500">Rp5.000</span>
                        <input type="radio" name="payment_method" class="ml-4">
                    </div>

                    <!-- GoPay -->
                    <div class="p-4 bg-gray-100 rounded-lg flex items-center justify-between">
                        <div class="flex items-center">
                            <%= image_tag 'gopay.jpeg', alt: 'GoPay', class: 'w-16 h-8' %>
                            <span class="ml-4 text-gray-700 font-medium">GoPay</span>
                        </div>
                        <span class="text-sm text-gray-500">Rp1.500</span>
                        <input type="radio" name="payment_method" class="ml-4">
                    </div>

                    <!-- ShopeePay -->
                    <div class="p-4 bg-gray-100 rounded-lg flex items-center justify-between">
                        <div class="flex items-center">
                            <%= image_tag 'shopeepay.jpeg', alt: 'Shopeepay', class: 'w-16 h-8' %>
                            <span class="ml-4 text-gray-700 font-medium">ShopeePay</span>
                        </div>
                        <span class="text-sm text-gray-500">Rp1.500</span>
                        <input type="radio" name="payment_method" class="ml-4">
                    </div>

                    <!-- OVO -->
                    <div class="p-4 bg-gray-100 rounded-lg flex items-center justify-between">
                        <div class="flex items-center">
                            <%= image_tag 'ovo.jpeg', alt: 'OVO', class: 'w-16 h-8' %>
                            <span class="ml-4 text-gray-700 font-medium">OVO</span>
                        </div>
                        <span class="text-sm text-gray-500">Rp1.500</span>
                        <input type="radio" name="payment_method" class="ml-4">
                    </div>
                </div>
            </div>

            <!-- Rincian Biaya -->
            <div>
                <h2 class="text-lg font-semibold mb-4">Rincian Biaya</h2>
                <div class="p-4 bg-gray-100 rounded-lg space-y-2">
                    <div class="flex justify-between text-gray-700">
                        <span>Biaya Sewa</span>
                        <span>Rp60.000</span>
                    </div>
                    <div class="flex justify-between text-gray-700">
                        <span>Biaya Produk Tambahan</span>
                        <span>Rp0</span>
                    </div>
                    <div class="flex justify-between text-gray-700 font-semibold">
                        <span>Total Biaya (Lunas)</span>
                        <span>Rp60.000</span>
                    </div>
                    <div class="flex justify-between text-gray-700">
                        <span>Convenience Fee</span>
                        <span>Rp0</span>
                    </div>
                    <div class="flex justify-between text-gray-700">
                        <span>Biaya Transaksi</span>
                        <span>Rp0</span>
                    </div>
                    <div class="flex justify-between text-gray-700 font-bold">
                        <span>Total Bayar</span>
                        <span>Rp60.000</span>
                    </div>
                </div>

                <div class="mt-6">
                    <p class="text-sm text-gray-600">Dengan mengklik tombol berikut, Anda menyetujui <a href="#" class="text-red-500 underline">Syarat dan Ketentuan</a> serta <a href="#" class="text-red-500 underline">Kebijakan privasi</a>.</p>
                </div>

                <button class="mt-4 w-full bg-gray-300 text-gray-600 font-semibold py-2 rounded-lg">
                    Lakukan Pembayaran
                </button>
            </div>
        </div>
    </div>

</body>
</html>


  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
