<h2 class="text-2xl font-bold text-center mb-6 text-[#072243]">Halo User!</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "w-full max-w-md mx-auto bg-gray-100 p-8 rounded-lg shadow-md" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <!-- Avatar -->
  <div class="flex justify-center mb-4">
    <%= image_tag "user.svg", class: "w-16 h-16" %>
  </div>

  <!-- Email Field -->
  <div class="mb-4">
    <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-[#072243] focus:border-[#072243] sm:text-sm" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="text-sm text-gray-600 mb-4">
      Currently waiting confirmation for: <%= resource.unconfirmed_email %>
    </div>
  <% end %>

  <!-- Password Field -->
  <div class="mb-4">
    <%= f.label :password, class: "block text-sm font-medium text-gray-700" %> <i class="text-xs text-gray-500">(leave blank if you don't want to change it)</i>
    <%= f.password_field :password, autocomplete: "new-password", class: "mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-[#072243] focus:border-[#072243] sm:text-sm" %>
    <% if @minimum_password_length %>
      <em class="text-xs text-gray-500"><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <!-- Password Confirmation Field -->
  <div class="mb-4">
    <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-[#072243] focus:border-[#072243] sm:text-sm" %>
  </div>

  <!-- Current Password Field -->
  <div class="mb-6">
    <%= f.label :current_password, class: "block text-sm font-medium text-gray-700" %> <i class="text-xs text-gray-500">(we need your current password to confirm your changes)</i>
    <%= f.password_field :current_password, autocomplete: "current-password", class: "mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-[#072243] focus:border-[#072243] sm:text-sm" %>
  </div>

 <div class="grid gap-4">
  <!-- Simpan Perubahan Button -->
  <div class="flex justify-center">
    <%= f.submit "Simpan Perubahan", class: "w-full bg-[#072243] text-white py-2 px-4 rounded-md shadow-sm hover:bg-[#0a3663] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#072243]" %>
  </div>
  <% end %>

  <!-- Cancel my account Button -->
<div class="flex justify-center">
  <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "w-full bg-red-600 text-white py-2 px-4 rounded-md shadow-sm hover:bg-red-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-600" %>
</div>

</div>
