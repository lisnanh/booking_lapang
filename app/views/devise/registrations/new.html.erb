<div class="flex justify-center items-center min-h-screen bg-gray-100">
  <div class="flex w-full shadow-lg overflow-hidden h-screen">
    <!-- Left side (Form Sign Up) -->
    <div class="w-1/2 p-6 pt-24">
      <h2 class="text-2xl font-semibold text-center text-[#072243] mb-6">Buat Akun</h2>

      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="flex justify-between mb-4">
        <button class="w-10 h-10 flex items-center justify-center bg-[#072243] text-white rounded-full">
          <i class="fab fa-facebook-f"></i>
        </button>
        <button class="w-10 h-10 flex items-center justify-center bg-red-500 text-white rounded-full">
          <i class="fab fa-google"></i>
        </button>
        <button class="w-10 h-10 flex items-center justify-center bg-black text-white rounded-full">
          <i class="fab fa-tiktok"></i>
        </button>
      </div>

      <p class="text-gray-500 mb-4">atau gunakan email anda untuk registrasi</p>

      <!-- Registration Form -->
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="mb-4">
          <%= f.label :email, class: "block text-gray-700" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-[#072243]" %>
        </div>

        <div class="mb-4">
          <%= f.label :password, class: "block text-gray-700" %>
          <% if @minimum_password_length %>
            <em class="text-sm text-gray-500">(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-[#072243]" %>
        </div>

        <div class="mb-6">
          <%= f.label :password_confirmation, class: "block text-gray-700" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-[#072243]" %>
        </div>

        <div class="actions mb-4">
          <%= f.submit "Daftar", class: "w-full bg-[#072243] text-white py-2 rounded-lg hover:bg-[#072243] transition duration-300" %>
        </div>
      <% end %>

      <!-- Additional Links -->
      <div class="text-center">
        <p class="text-sm text-gray-500">Sudah Memiliki Akun? <%= link_to "Masuk", new_session_path(resource_name), class: "text-[#072243] hover:underline" %></p>
      </div>
    </div>

    <!-- Right side (Selamat Datang) -->
    <div class="w-1/2 bg-cover bg-center h-full" style="background-image: url('<%= asset_path('stadiun.jpg') %>');">
      <div class="flex flex-col justify-center items-center h-full bg-black bg-opacity-20 p-8">
        <h2 class="text-3xl font-bold text-white mb-6">Selamat Datang Kembali!</h2>
        <p class="text-white mb-6">Untuk tetap terhubung dengan kami, silahkan masuk dengan akun anda</p>
        <%= link_to "Masuk", new_session_path(resource_name), class: "bg-[#072243] text-white py-2 px-6 rounded-lg" %>
      </div>
    </div>
  </div>
</div>
