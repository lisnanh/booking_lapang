<div style="display: flex; justify-content: center; align-items: center; min-height: 100vh; background-color: #f5f5f5;">
  <div class="w-1/3 md:w-1/4 lg:w-1/4 xl:w-1/4 bg-white rounded-md shadow-md p-6" style="width: 300px; border: 1px solid #ddd;">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h2 style="text-align: center; color: #000; font-weight: bold;">Log in</h2>
      
      <div class="field" style="margin-top: 20px;">
        <%= f.label :email, style: "color: #555; font-weight: bold;" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-field" %>
      </div>

      <div class="field" style="margin-top: 15px;">
        <%= f.label :password, style: "color: #555; font-weight: bold;" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "input-field" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field" style="margin-top: 15px;">
          <%= f.check_box :remember_me, class: "checkbox-field" %>
          <%= f.label :remember_me, style: "color: #555;" %>
        </div>
      <% end %>

      <div class="actions" style="margin-top: 25px;">
        <%= f.submit "Log in", class: "btn btn-primary", style: "width: 100%; background-color: #00aa13; color: white; font-weight: bold; border: none; padding: 10px 0; border-radius: 4px;" %>
      </div>

      <div style="text-align: center; margin-top: 15px;">
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>
