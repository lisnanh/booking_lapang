<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Fields" %>

  <div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Fields" %>

  <!-- Tampilan -->
  <div class="container mx-auto p-6">
    <div class="text-center mb-8">
      <h1 class="text-3xl font-semibold text-gray-800">Booking Lapangan Online Terbaik</h1>
      <a <%= link_to 'Daftarkan Venue', new_user_session_path, class: 'inline-block mt-4 px-8 py-2 bg-[#072243] text-white rounded-full' %>
      </a>
    </div>

    <div class="flex justify-center mb-4">
      <input type="text" placeholder="Cari Nama Field" class="px-4 py-2 border rounded-l-md w-1/3" />
      <input type="text" placeholder="Lokasi" class="px-4 py-2 border" />
      <input type="text" placeholder="Lapangan" class="px-4 py-2 border" />
      <button class="px-4 py-2 bg-blue-600 text-white rounded-r-md">
        <i class="fa-solid fa-magnifying-glass"></i>
      </button>
    </div>

    <div class="flex justify-between text-sm text-gray-600 mb-4">
      <p>Menampilkan: <%= @fields.size %> / <%= @total_fields %> tempat yang tersedia</p>
      <p>Urutan berdasarkan: <span class="font-semibold">Harga terendah</span></p>
    </div>

    <div class="grid grid-cols-3 gap-6">
      <% @fields.each do |field| %>
        <div class="border rounded-lg overflow-hidden shadow hover:shadow-lg transition-shadow cursor-pointer">
          <%= link_to field_path(field), class: "block" do %>
            <img src="<%= field.image_url %>" alt="<%= field.name %>" class="w-full h-40 object-cover" />
            <div class="p-4 bg-white">
              <h2 class="font-semibold text-gray-700 text-lg"><%= field.name %></h2>
              <p class="text-sm text-gray-500"><%= field.location %></p>
              <p class="text-sm text-gray-500 mt-2">Mulai Dari <span class="font-semibold"><%= number_to_currency(field.price) %>/Sesi</span></p>
              <p class="text-sm text-gray-500"><%= field.date %></p>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
   
  <!-- Akhir Tampilan -->
  <div id="fields" class="min-w-full">
    <% @fields.each do |field| %>
      <%= render field %>
    <% end %>
  </div>
</div>

</div>
