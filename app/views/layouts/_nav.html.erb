<nav class="p-4" style="background-color: #11181F;">
  <div class="container mx-auto flex justify-between items-center">
    <!-- Logo -->
    <%= link_to 'booking_lapang', root_path, class: 'text-white font-bold text-xl' %>

    <!-- Navbar berdasarkan jenis user -->
    <% if current_user.nil? %>
      <!-- Navbar Umum: Hanya Login dan Sign Up -->
      <div class="hidden md:flex space-x-6 items-center">
        <%= link_to 'Login', new_user_session_path, class: 'text-white hover:text-gray-200' %>
        <%= link_to 'Sign Up', new_user_registration_path, class: 'bg-white text-black-600 px-4 py-2 rounded-full hover:bg-gray-200' %>
      </div>

    <% elsif current_user.admin? %>
      <!-- Navbar Admin: Semua opsi + Profil User -->
      <div class="hidden md:flex space-x-6 items-center">
        <%= link_to 'Sewa Lapangan', client_fields_path, class: 'text-white hover:text-gray-200' %>
        <%= link_to 'Profil', edit_user_registration_path, class: 'text-white hover:text-gray-200' %>
        <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'text-white hover:text-gray-200' %>
      </div>

    <% else %>
      <!-- Navbar Client: Semua opsi -->
      <div class="hidden md:flex space-x-6 items-center">
        <%= link_to 'Sewa Lapangan', client_fields_path, class: 'text-white hover:text-gray-200' %>
        <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'text-white hover:text-gray-200' %>
      </div>
    <% end %>

    <!-- Mobile Menu Button -->
    <div class="md:hidden flex items-center">
      <button class="text-white focus:outline-none">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
        </svg>
      </button>
    </div>
  </div>
</nav>
