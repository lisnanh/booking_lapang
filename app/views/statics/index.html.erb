<%= content_for :head do %>
    <title>Booking Lapang Dashboard</title>
  <% end %>
  
  <div class="bg-gray-100 text-gray-900">
    <!-- Hero Section -->
    <header class="bg-[#11181F] text-white p-10 text-center">
      <h1 class="text-4xl font-bold">Welcome to Booking Lapang</h1>
    </header>
  
    <!-- Introduction Section -->
    <section class="p-10">
      <p class="text-lg">Introduction to our platform and services.</p>
    </section>
  
    <!-- Creativity Section -->
    <section class="p-10 bg-[#11181F] text-white">
      <h2 class="text-2xl font-semibold">Our Creative Approach</h2>
      <p>How we bring innovation to sports booking.</p>
    </section>
  
    <!-- Work Section -->
    <section class="p-10">
      <h2 class="text-2xl font-semibold">Our Work</h2>
      <div class="grid grid-cols-3 gap-4">
        <div class="bg-[#11181F] text-white p-6 text-center">Work 1</div>
        <div class="bg-[#11181F] text-white p-6 text-center">Work 2</div>
        <div class="bg-[#11181F] text-white p-6 text-center">Work 3</div>
      </div>
    </section>
  
    <!-- Help Section -->
    <section class="p-10 bg-[#00B140] text-white">
      <h2 class="text-2xl font-semibold">How We Help</h2>
      <p>Support and assistance details.</p>
    </section>
  
    <!-- Clients Section -->
    <section class="p-10">
      <h2 class="text-2xl font-semibold">Our Clients</h2>
      <div class="grid grid-cols-3 gap-4">
        <div class="bg-[#11181F] text-white p-6 text-center">Client 1</div>
        <div class="bg-[#11181F] text-white p-6 text-center">Client 2</div>
        <div class="bg-[#11181F] text-white p-6 text-center">Client 3</div>
      </div>
    </section>
  
    <!-- About Us Section -->
    <section class="p-10">
      <h2 class="text-2xl font-semibold">About Us</h2>
      <p>Information about the team and mission.</p>
    </section>
  
    <!-- Video Section -->
    <section class="p-10 bg-[#11181F] text-white">
      <h2 class="text-2xl font-semibold">Watch Our Video</h2>
      <video controls class="w-full max-w-xl mx-auto">
        <source src="video.mp4" type="video/mp4">
        Your browser does not support the video tag.
      </video>
    </section>
  
    <!-- Why Us Section -->
    <section class="p-10">
      <h2 class="text-2xl font-semibold">Why Choose Us?</h2>
      <p>Reasons to choose our platform.</p>
    </section>
  
    <!-- Quote Section -->
    <section class="p-10 bg-[#00B140] text-white">
      <blockquote class="text-xl font-semibold">
        "Great things come from hard work and perseverance."
      </blockquote>
    </section>
  
    <!-- Get In Touch Section -->
    <section class="p-10">
      <h2 class="text-2xl font-semibold">Get In Touch</h2>
      <p>Contact us for more information.</p>
    </section>
  
    <!-- Contact Form Section -->
    <section class="p-10 bg-[#11181F] text-white">
      <h2 class="text-2xl font-semibold">Contact Us</h2>
      <form class="space-y-4">
        <input type="text" placeholder="Name" class="w-full p-3 bg-white text-black rounded">
        <input type="email" placeholder="Email" class="w-full p-3 bg-white text-black rounded">
        <textarea placeholder="Your message" class="w-full p-3 bg-white text-black rounded"></textarea>
        <button type="submit" class="w-full p-3 bg-[#00B140] text-white rounded">Send</button>
      </form>
    </section>
  
    <!-- Footer Section -->
    <footer class="bg-[#11181F] text-white p-10 text-center">
      <p>&copy; 2024 Booking Lapang. All rights reserved.</p>
    </footer>
  </div>
  